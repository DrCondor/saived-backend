<div class="max-w-lg">
  <h1 class="text-xl font-semibold text-neutral-900 mb-1">Ustawienia konta</h1>
  <p class="text-sm text-neutral-500 mb-6">Zmień email lub hasło do swojego konta.</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
    <% if resource.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <p class="text-sm font-medium text-red-800 mb-2">
          <%= pluralize(resource.errors.count, "błąd", "błędy", "błędów") %> uniemożliwia zapisanie zmian:
        </p>
        <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, "Adres email", class: "block text-sm font-medium text-neutral-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full rounded-lg border border-neutral-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="bg-amber-50 border border-amber-200 rounded-lg p-3">
        <p class="text-sm text-amber-800">Oczekuje na potwierdzenie: <%= resource.unconfirmed_email %></p>
      </div>
    <% end %>

    <hr class="border-neutral-200">

    <div>
      <%= f.label :password, "Nowe hasło", class: "block text-sm font-medium text-neutral-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full rounded-lg border border-neutral-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent",
          placeholder: "Pozostaw puste, aby nie zmieniać" %>
      <% if @minimum_password_length %>
        <p class="mt-1 text-xs text-neutral-500">Minimum <%= @minimum_password_length %> znaków</p>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Potwierdź nowe hasło", class: "block text-sm font-medium text-neutral-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full rounded-lg border border-neutral-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent" %>
    </div>

    <hr class="border-neutral-200">

    <div>
      <%= f.label :current_password, "Aktualne hasło", class: "block text-sm font-medium text-neutral-700 mb-1" %>
      <%= f.password_field :current_password, autocomplete: "current-password",
          class: "w-full rounded-lg border border-neutral-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent" %>
      <p class="mt-1 text-xs text-neutral-500">Wymagane do potwierdzenia zmian</p>
    </div>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit "Zapisz zmiany",
          class: "inline-flex items-center rounded-lg bg-neutral-900 px-4 py-2 text-sm font-medium text-white hover:bg-neutral-800 transition-colors cursor-pointer" %>
      <%= link_to "Anuluj", workspace_projects_path,
          class: "text-sm text-neutral-600 hover:text-neutral-900" %>
    </div>
  <% end %>

  <div class="mt-10 pt-6 border-t border-neutral-200">
    <h2 class="text-sm font-medium text-red-600 mb-2">Usuń konto</h2>
    <p class="text-sm text-neutral-500 mb-3">Ta operacja jest nieodwracalna. Wszystkie Twoje projekty zostaną usunięte.</p>
    <%= button_to "Usuń moje konto",
        registration_path(resource_name),
        method: :delete,
        data: { turbo_confirm: "Czy na pewno chcesz usunąć konto? Ta operacja jest nieodwracalna." },
        class: "inline-flex items-center rounded-lg border border-red-300 px-3 py-1.5 text-sm font-medium text-red-600 hover:bg-red-50 transition-colors cursor-pointer" %>
  </div>
</div>
