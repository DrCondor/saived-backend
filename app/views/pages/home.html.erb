<%# Hero Section %>
<section class="relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-emerald-50/50 via-transparent to-violet-50/30 pointer-events-none"></div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 sm:py-24 relative">
    <div class="grid gap-12 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,1fr)] items-center">
      <div>
        <div class="inline-flex items-center gap-2 rounded-full bg-emerald-100 px-3 py-1 text-xs font-medium text-emerald-700 mb-6">
          <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
          Wczesny dostep dostepny
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-neutral-900 mb-6">
          Kosztorysy i produkty
          <span class="block text-emerald-600">w jednym miejscu.</span>
        </h1>

        <p class="text-lg text-neutral-600 max-w-xl mb-8 leading-relaxed">
          SAIVED pomaga architektom wnetrz zbierac produkty z roznych sklepow,
          sledzic ceny i tworzyc profesjonalne zestawienia dla klientow -
          bez Excela i recznego przepisywania.
        </p>

        <div class="flex flex-wrap items-center gap-4 mb-8">
          <% if user_signed_in? %>
            <%= link_to workspace_path, class: "inline-flex items-center gap-2 rounded-full bg-neutral-900 px-6 py-3 text-sm font-medium text-white shadow-lg hover:bg-neutral-800 transition-all hover:shadow-xl hover:-translate-y-0.5" do %>
              Przejdz do panelu
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: "inline-flex items-center gap-2 rounded-full bg-neutral-900 px-6 py-3 text-sm font-medium text-white shadow-lg hover:bg-neutral-800 transition-all hover:shadow-xl hover:-translate-y-0.5" do %>
              Zacznij za darmo
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            <% end %>
          <% end %>

          <%= link_to features_path, class: "inline-flex items-center gap-2 rounded-full border border-neutral-300 bg-white px-5 py-3 text-sm font-medium text-neutral-700 hover:bg-neutral-50 hover:border-neutral-400 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Zobacz funkcje
          <% end %>
        </div>

        <div class="flex items-center gap-6 text-sm text-neutral-500">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Bez karty kredytowej
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            14 dni za darmo
          </div>
        </div>
      </div>

      <%# Hero Preview Card %>
      <div class="relative">
        <div class="absolute -inset-4 bg-gradient-to-r from-emerald-100 to-violet-100 rounded-[2rem] blur-2xl opacity-40"></div>
        <div class="relative rounded-3xl border border-neutral-200 bg-white shadow-2xl p-6">
          <div class="flex items-center justify-between mb-5">
            <div>
              <p class="text-[10px] font-bold tracking-[0.2em] uppercase text-neutral-400 mb-1">Projekt</p>
              <p class="text-base font-semibold text-neutral-900">Apartament Mokotow</p>
            </div>
            <div class="flex items-center gap-2">
              <span class="rounded-full bg-emerald-500 px-3 py-1.5 text-xs font-bold text-white">
                42 850 zl
              </span>
            </div>
          </div>

          <div class="space-y-3 mb-5">
            <% [
              { name: "Sofa narozna IKEA KIVIK", price: "4 299", status: "zamowione", img: "emerald" },
              { name: "Stolik kawowy dab", price: "1 890", status: "wybrane", img: "amber" },
              { name: "Lampa wiszaca brass", price: "890", status: "propozycja", img: "violet" },
            ].each do |item| %>
              <div class="flex items-center gap-3 p-3 rounded-xl border border-neutral-100 bg-neutral-50/50">
                <div class="w-12 h-12 rounded-lg bg-<%= item[:img] %>-100 flex items-center justify-center">
                  <svg class="w-6 h-6 text-<%= item[:img] %>-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-neutral-900 truncate"><%= item[:name] %></p>
                  <p class="text-xs text-neutral-500"><%= item[:price] %> zl</p>
                </div>
                <span class="shrink-0 rounded-full px-2 py-0.5 text-[10px] font-semibold <%=
                  case item[:status]
                  when 'zamowione' then 'bg-emerald-500 text-white'
                  when 'wybrane' then 'bg-violet-500 text-white'
                  else 'bg-neutral-200 text-neutral-600'
                  end
                %>">
                  <%= item[:status].upcase %>
                </span>
              </div>
            <% end %>
          </div>

          <div class="flex items-center justify-between pt-4 border-t border-neutral-100">
            <div class="flex -space-x-2">
              <% 3.times do |i| %>
                <div class="w-7 h-7 rounded-full border-2 border-white bg-neutral-<%= 200 + i * 100 %> flex items-center justify-center text-[10px] font-medium text-neutral-600">
                  <%= ['AK', 'MW', 'JD'][i] %>
                </div>
              <% end %>
            </div>
            <p class="text-xs text-neutral-400">Ostatnia aktualizacja: dzis, 14:32</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Logos / Social Proof %>
