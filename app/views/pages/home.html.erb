<%# Pricing Preview %>
<section class="py-20 sm:py-28 bg-gradient-to-b from-neutral-50 to-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="text-center mb-16">
      <p class="text-xs font-bold tracking-[0.2em] uppercase text-emerald-600 mb-3">Cennik</p>
      <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900 mb-4">
        Prosty i przejrzysty cennik
      </h2>
      <p class="text-neutral-600 max-w-2xl mx-auto">
        Zacznij za darmo, rozwijaj sie wraz z Twoim biznesem.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
      <% [
        { name: "Starter", price: "0", period: "na zawsze", features: ["3 projekty", "50 produktow", "Rozszerzenie Chrome", "Eksport PDF"], highlight: false },
        { name: "Pro", price: "49", period: "miesiecznie", features: ["Nielimitowane projekty", "Nielimitowane produkty", "Sledzenie cen", "Priorytetowe wsparcie", "Wlasny branding PDF"], highlight: true },
        { name: "Team", price: "149", period: "miesiecznie", features: ["Wszystko z Pro", "Do 5 uzytkownikow", "Wspoldzielone projekty", "Panel admina", "API dostep"], highlight: false }
      ].each do |plan| %>
        <div class="relative p-6 rounded-2xl border <%= plan[:highlight] ? 'border-emerald-500 bg-white shadow-xl' : 'border-neutral-200 bg-white' %>">
          <% if plan[:highlight] %>
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="rounded-full bg-emerald-500 px-3 py-1 text-xs font-medium text-white">Popularny</span>
            </div>
          <% end %>

          <h3 class="text-lg font-semibold text-neutral-900 mb-2"><%= plan[:name] %></h3>
          <div class="mb-6">
            <span class="text-4xl font-bold text-neutral-900"><%= plan[:price] %> zl</span>
            <span class="text-neutral-500">/ <%= plan[:period] %></span>
          </div>

          <ul class="space-y-3 mb-6">
            <% plan[:features].each do |feature| %>
              <li class="flex items-center gap-2 text-sm text-neutral-600">
                <svg class="w-4 h-4 text-emerald-500 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <%= feature %>
              </li>
            <% end %>
          </ul>

          <%= link_to plan[:highlight] ? new_user_registration_path : pricing_path,
              class: "block w-full text-center rounded-full py-2.5 text-sm font-medium transition-all #{plan[:highlight] ? 'bg-neutral-900 text-white hover:bg-neutral-800' : 'border border-neutral-300 text-neutral-700 hover:bg-neutral-50'}" do %>
            <%= plan[:highlight] ? 'Zacznij teraz' : 'Wybierz plan' %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-8">
      <%= link_to pricing_path, class: "inline-flex items-center gap-2 text-sm font-medium text-emerald-600 hover:text-emerald-700" do %>
        Porownaj wszystkie plany
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      <% end %>
    </div>
  </div>
</section>

