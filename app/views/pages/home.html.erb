      ].each do |item| %>
        <div class="relative">
          <div class="text-6xl font-bold text-neutral-800 mb-4"><%= item[:step] %></div>
          <h3 class="text-xl font-semibold mb-3"><%= item[:title] %></h3>
          <p class="text-neutral-400 leading-relaxed"><%= item[:desc] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>

