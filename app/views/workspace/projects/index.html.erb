<%# workspace/projects/index.html.erb %>

<div class="flex gap-6">
  <%# SIDEBAR %>
  <aside class="w-72 shrink-0">
    <div class="sticky top-6">
      <div class="rounded-3xl bg-neutral-100/80 border border-neutral-200/50 px-4 py-5">
        <%# New project button %>
        <div class="mb-6">
          <%= link_to new_workspace_project_path,
                      class: "flex items-center justify-center gap-2 w-full rounded-full border border-neutral-300 bg-white px-4 py-2.5 text-sm font-medium text-neutral-800 hover:bg-neutral-50 hover:border-neutral-400 transition-colors shadow-sm" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nowy projekt
          <% end %>
        </div>

        <%# Projects list %>
        <div class="space-y-6">
          <div>
            <p class="mb-3 text-[10px] font-bold tracking-[0.2em] uppercase text-neutral-400">
              Projekty
            </p>

            <div class="space-y-1">
              <% @projects.each do |project| %>
                <% active = (@current_project && project.id == @current_project.id) %>

                <div class="rounded-2xl <%= active ? 'bg-white shadow-sm border border-neutral-200/80' : 'hover:bg-white/60' %> transition-all">
                  <%= link_to workspace_projects_path(project_id: project.id),
                              class: "block px-3 py-2.5" do %>
                    <div class="flex items-center justify-between">
                      <span class="text-sm font-medium text-neutral-900 truncate">
                        <%= project.name.presence || "Bez nazwy" %>
                      </span>
                      <% if active %>
                        <svg class="w-4 h-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                      <% end %>
                    </div>
                    <span class="text-[11px] text-neutral-400">
                      <%= l(project.created_at.to_date, format: :short) rescue project.created_at.to_date %>
                    </span>
                  <% end %>

                  <%# Nested sections for active project %>
                  <% if active && @current_project %>
                    <div class="px-3 pb-2.5 space-y-0.5">
                      <% @current_project.sections.order(:position, :created_at).each do |section| %>
                        <a href="#section-<%= section.id %>"
                           class="flex items-center gap-2 rounded-xl px-2.5 py-1.5 text-xs text-neutral-600 hover:bg-neutral-100 hover:text-neutral-900 transition-colors">
                          <span class="w-1.5 h-1.5 rounded-full bg-neutral-300"></span>
                          <span class="truncate"><%= section.name %></span>
                        </a>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <% if @projects.empty? %>
                <p class="px-3 py-2 text-xs text-neutral-400">
                  Brak projektów. Utwórz pierwszy!
                </p>
              <% end %>
            </div>
          </div>

          <%# Future sections %>
          <div class="pt-4 border-t border-neutral-200/50">
            <p class="mb-2 text-[10px] font-bold tracking-[0.2em] uppercase text-neutral-400">
              Ulubione
            </p>
            <p class="text-[11px] text-neutral-400 italic">
              wkrótce...
            </p>
          </div>

          <div>
            <p class="mb-2 text-[10px] font-bold tracking-[0.2em] uppercase text-neutral-400">
              Ustawienia
            </p>
            <p class="text-[11px] text-neutral-400 italic">
              wkrótce...
            </p>
          </div>
        </div>
      </div>
    </div>
  </aside>

  <%# MAIN CONTENT %>
  <section class="flex-1 min-w-0">
    <% if @current_project.present? %>
      <%# Project header %>
      <header class="mb-8">
        <div class="flex items-start justify-between gap-4">
          <div>
            <p class="text-xs font-bold tracking-[0.15em] uppercase text-neutral-400 mb-1">
              Projekt
            </p>
            <h1 class="text-2xl font-bold tracking-tight text-neutral-900">
              <%= @current_project.name %>
            </h1>
            <p class="mt-2 flex items-center gap-2">
              <span class="text-sm text-neutral-500">Suma projektu:</span>
              <span class="inline-flex items-center rounded-full bg-neutral-900 px-4 py-1.5 text-sm font-bold text-white">
                <%= number_to_currency(@current_project.total_price, unit: "", precision: 2, delimiter: " ") %> zł
              </span>
            </p>
          </div>

          <%# Action buttons %>
          <div class="flex items-center gap-2">
            <button class="inline-flex items-center gap-1.5 rounded-full border border-neutral-300 bg-white px-4 py-2 text-xs font-medium text-neutral-700 hover:bg-neutral-50 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              Podgląd PDF
            </button>
            <button class="inline-flex items-center gap-1.5 rounded-full border border-neutral-300 bg-white px-4 py-2 text-xs font-medium text-neutral-700 hover:bg-neutral-50 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              Znajdź
            </button>
            <button class="inline-flex items-center gap-1.5 rounded-full border border-neutral-300 bg-white px-4 py-2 text-xs font-medium text-neutral-700 hover:bg-neutral-50 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12" />
              </svg>
              Sortuj
            </button>
            <button class="inline-flex items-center gap-1.5 rounded-full border border-neutral-300 bg-white px-4 py-2 text-xs font-medium text-neutral-700 hover:bg-neutral-50 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
              </svg>
              Filtr
            </button>
          </div>
        </div>
      </header>

      <%# Sections %>
      <% sections = @current_project.sections.order(:position, :created_at) %>

      <% sections.each do |section| %>
        <div id="section-<%= section.id %>" class="mb-10 scroll-mt-6">
          <%# Section header %>
          <div class="flex items-center justify-between mb-4 pb-3 border-b border-neutral-200">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>

              <%= form_with model: [@current_project, section],
                            url: workspace_project_section_path(@current_project, section),
                            method: :patch,
                            local: true,
                            data: { turbo: false },
                            class: "flex-1" do |f| %>
                <%= f.text_field :name,
                                value: section.name,
                                autofocus: (params[:section_id].to_i == section.id),
                                class: "text-lg font-bold text-neutral-900 bg-transparent border-0 p-0 focus:ring-0 focus:outline-none hover:text-neutral-700 w-full" %>
              <% end %>
            </div>

            <div class="flex items-center gap-3">
              <%# Section total %>
              <div class="inline-flex items-center rounded-full bg-emerald-50 border border-emerald-200 px-4 py-1.5">
                <span class="text-sm font-bold text-emerald-700">
                  <%= number_to_currency(section.total_price, unit: "", precision: 2, delimiter: " ") %> zł
                </span>
              </div>
            </div>
          </div>

          <%# Section items %>
          <%= render "workspace/projects/section_items", section: section %>
        </div>
      <% end %>

      <%# Add section button %>
      <div class="mt-8 mb-16">
        <%= form_with model: [@current_project, ProjectSection.new],
                      url: workspace_project_sections_path(@current_project),
                      local: true,
                      data: { turbo: false } do |f| %>
          <button type="submit"
                  class="flex items-center justify-center gap-2 w-full rounded-2xl border-2 border-dashed border-neutral-300 py-6 text-neutral-500 hover:border-neutral-400 hover:text-neutral-600 hover:bg-neutral-50 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span class="font-medium">Dodaj sekcję</span>
          </button>
        <% end %>
      </div>

    <% else %>
      <%# Empty state %>
      <div class="flex flex-col items-center justify-center py-20 text-center">
        <div class="w-16 h-16 rounded-full bg-neutral-100 flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <h2 class="text-lg font-semibold text-neutral-900 mb-2">Brak projektów</h2>
        <p class="text-sm text-neutral-500 mb-6 max-w-sm">
          Utwórz swój pierwszy projekt, aby rozpocząć tworzenie kosztorysów dla klientów.
        </p>
        <%= link_to new_workspace_project_path,
                    class: "inline-flex items-center gap-2 rounded-full bg-neutral-900 px-5 py-2.5 text-sm font-medium text-white hover:bg-neutral-800 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Utwórz pierwszy projekt
        <% end %>
      </div>
    <% end %>
  </section>
</div>
